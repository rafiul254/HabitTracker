<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.habittracker.controller.StatisticsController">
    <content>
        <VBox spacing="30.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="ðŸ“Š Statistics and Analytics" />

                <!-- Top Stats Cards -->
                <VBox fx:id="statsCardsContainer" spacing="15.0" />

                <!-- Overview Stats -->
                <HBox alignment="CENTER" spacing="30.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">
                    <children>
                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Total Habits" />
                                <Label fx:id="totalHabitsStatLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2196F3;" text="0" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Completion Rate" />
                                <Label fx:id="completionRateLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="0%" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Average Streak" />
                                <Label fx:id="averageStreakLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #FF9800;" text="0 days" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Pie Chart Section -->
                <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">
                    <children>
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Category Distribution" />
                        <VBox fx:id="pieChartContainer" alignment="CENTER" minHeight="350.0" />
                    </children>
                </VBox>

                <!-- Line Chart Section -->
                <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">
                    <children>
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Weekly Trend" />
                        <VBox fx:id="lineChartContainer" alignment="CENTER" minHeight="300.0" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </content>
</ScrollPane>
