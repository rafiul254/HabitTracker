                    </children>
                </HBox>
                <VBox spacing="5.0">
                    <children>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Today Progress" />
                        <ProgressBar fx:id="todayProgressBar" prefHeight="30.0" prefWidth="1160.0" progress="0.0" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <HBox fx:id="statsContainer" alignment="CENTER" spacing="15.0">
                    <children>
                        <VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">
                            <children>
                                <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Total Habits" />
                                <Label fx:id="totalHabitsLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2196F3;" text="0" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">
                            <children>
                                <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Completed Today" />
                                <Label fx:id="completedTodayLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="0" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">
                            <children>
                                <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Current Streak" />
                                <Label fx:id="currentStreakLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #FF9800;" text="0" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">
                            <children>
                                <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Total Points" />
                                <Label fx:id="totalPointsLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #FFC107;" text="0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <VBox spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Today Habits" />
                        <ListView fx:id="habitListView" prefHeight="400.0" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
    <bottom>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Weekly Progress" />
                <HBox fx:id="chartContainer" alignment="CENTER" spacing="10.0" style="-fx-min-height: 100; -fx-background-color: #f5f5f5; -fx-background-radius: 8;">
                    <children>
                        <Label text="Chart Area" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>
